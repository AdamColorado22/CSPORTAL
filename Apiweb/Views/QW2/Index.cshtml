                            var sum=0
                            for (var i = 0; i < table2.rows('.selected').data().length; i++)
                            {
                                sum = sum + table2.rows('.selected').data()[i].INVENTARIO
                            }


                            Procesar(sum, $ITEM, $PO, dt.row({ selected: true }).data().PART_ID);
                        }
                    },
