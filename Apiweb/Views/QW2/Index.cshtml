        function Procesar($cantidad, $ITEM, $PO, $PART_ID) {

            $("#exampleModal .close").click();


            /* Validamos los precios respecto a SMI  y MH*/
            jQuery.ajax({
                url: "/QW2/Procesar/?cantidad=" + $cantidad + "&ITEM=" + $ITEM + "&PO=" + $PO + "&Part_id=" + $PART_ID,
                type: "GET",
