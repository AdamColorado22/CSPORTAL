<script src="~/Content/js/pdfmake.min.js"></script>

<link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Content/js/bootstrap.js"></script>
<script src="~/Content/js/buttons.html5.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Content/js/dataTables.responsive.min.js"></script>
<link href="~/Content/css/responsive.dataTables.min.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        Historico
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered" id="DTClientes" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>PO_NUMBER</th>
                    <th>LINEA</th>
                    <th>ITEM</th>
                    <th>CANTIDAD</th>
                    <th>PRECIO PO</th>
                    <th>PRECIO OK</th>
                    @*<th>VALIDACION</th>*@
                    <th>ON HAND</th>
                    <th>QTY POR CAJA</th>
                    <th>CAJA CERRADA</th>
                    <th>DESPACHADO</th>
                    <th>CAJA DESPACHAR</th>
                    <th>CANTIDAD ENVIAR</th>
                    <th>COMENTARIO</th>
                    <th>CLIENTE</th>
                    <th>PEDIDO</th>
                    <th>LINEA PEDIDO</th>
                    <th>FECHA</th>
                </tr>
            </thead>

        </table>
    </div>
</div>


<script>



    $('#navhist').addClass('active');
    $('#navsmi').removeClass("active");
    $('#navmh').removeClass("active");
    $('#navhome').removeClass("active");
    $('#navqw2').removeClass("active");
    $('#navqw6').removeClass("active");
    $('#navqw62').removeClass("active");
            var table =   $('#DTClientes').DataTable({
                responsive: true,
                dom: "Bfrltip",
                "scrollY": "500px",
                "iDisplayLength": 100,
                "lengthMenu": [[10, 25, 50, 100,-1], [10, 25, 50, 100,"All"]],
                ajax: "/Home/Listar2",
                columns: [

                    { data: "ID" },
                    { data: "PO_NUMBER" },
                    { data: "LINEA" },
                    { data: "ITEM" },
                    { data: "QUANTITY" },
                    { data: "PRECIO_PO"},
                    { data: "PRECIO_OK"},
                   /* {data: "VALIDACION"},*/
                    { data: "ON_HAND" },
                    { data: "CANTIDAD_X_CAJA" },
                    { data: "CAJA_CERRADA" },
                    { data: "DESPACHADO" },
                    { data: "CAJA_DESPACHAR" },
                    { data: "CANTIDAD_ENVIAR" },
                    { data: "COMENTARIO" },
                    { data: "CLIENTE" },
                    { data: "PEDIDO" },
                    { data: "PED_LINE" },
                    { data: "FECHA"}
                ],
                order: [
                    [0, 'desc']
                    
                ],
                select: true,
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel" style="color:green"></i> ',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-success btn-sm'
                    }],
                language: {
                   url: "@Url.Content("~/Content/idioma/datatable.es-ES.json")"
                }
            });





</script>





