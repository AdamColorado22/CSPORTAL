<style type="text/css">
    div.DTE_Inline input {
        border: none;
        background-color: transparent;
        padding: 0 !important;
        font-size: 90%;
    }

        div.DTE_Inline input:focus {
            outline: none;
            background-color: transparent;
        }

    button.btn-space {
        margin-left: 1em;
    }

    div.DTE_Body div.DTE_Body_Content div.DTE_Field {
        float: left;
        width: 50%;
        padding: 5px 20px;
        clear: none;
        box-sizing: border-box;
    }

    div.DTE_Body div.DTE_Form_Content:after {
        content: ' ';
        display: block;
        clear: both;
    }
</style>


<div class="row m-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                SMI SOCKS REPORT
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered" id="DTClientes" style="width:100%">
                    <thead>
                        <tr>

                            <th>ID</th>
                            <th>PART_ID</th>
                            <th>5M</th>
                            <th>10M</th>
                            <th>15M</th>
                            <th>25M</th>
                            <th>50M</th>
                            <th>75M</th>
                            <th>100M</th>
                            @*<th>PRECIO 8</th>
                            <th>PRECIO 9</th>
                            <th>PRECIO 10</th>*@
                        </tr>
                    </thead>

                </table>
            </div>
        </div>

    </div>

</div>

@section scripts{


    <script>
        $('#navqw2').addClass('active');
        $('#navhist').removeClass('active');
        $('#navsmi').removeClass("active");
        $('#navmh').removeClass("active");
        $('#navhome').removeClass("active");
        $('#navqw6').removeClass("active");
        $('#navqw7').removeClass("active");
        $('#navqw62').removeClass("active");

          $(document).ready(function () {
            editor = new $.fn.dataTable.Editor({
                ajax: "/QW2/PreciosSock",
                table: "#DTClientes",

                fields: [
                 {
                    label: "PART ID:",
                        name: "PART_ID"
                    }
                    , {
                        label: "PRECIO 1:",
                        name: "PRECIO1"
                    }
                    , {
                        label: "PRECIO 2:",
                        name: "PRECIO2"
                    }
                    , {
                        label: "PRECIO 3:",
                        name: "PRECIO3"
                    }
                    , {
                        label: "PRECIO 4:",
                        name: "PRECIO4"
                    }
                    , {
                        label: "PRECIO 5:",
                        name: "PRECIO5"
                    }
                    , {
                        label: "PRECIO 6:",
                        name: "PRECIO6"
                    }
                    , {
                        label: "PRECIO 7:",
                        name: "PRECIO7"
                    }
                   
                    //, {
                    //    label: "PRECIO 8:",
                    //    name: "PRECIO8"
                    //}
                    //, {
                    //    label: "PRECIO 9:",
                    //    name: "PRECIO9"
                    //}
                    //, {
                    //    label: "PRECIO 10:",
                    //    name: "PRECIO10"
                    //}

                ]
            });

            $('#DTClientes').on('click', 'tbody ul.dtr-details li', function (e) {
  
                editor.inline($('span.dtr-data', this));
            });
         
            var table =   $('#DTClientes').DataTable({
              /*  responsive: true,*/
                scrollX: true,
                dom: "Bfrltip",
                "scrollY": "500px",
                "iDisplayLength": -1,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
                ajax: "/QW2/PreciosSock",
 
                columns: [
                    { data: "ID" },
                    { data: "PART_ID" },
                    { data: "PRECIO1" },
                    { data: "PRECIO2" },
                    { data: "PRECIO3" },
                    { data: "PRECIO4" },
                    { data: "PRECIO5" },
                    { data: "PRECIO6" },
                    { data: "PRECIO7" },
                    //{ data: "PRECIO8" },
                    //{ data: "PRECIO9" },
                    //{ data: "PRECIO10" },
                



                ],

                order: [1, 'asc'],
                keys: {
                    /*columns: ':not(:first-child)',*/
                    editor: editor
                },
                select: true,
                buttons: [

                    { extend: 'create', className: 'btn-light', editor: editor },
                    { extend: 'edit', className: 'btn-light', editor: editor },
                    { extend: 'remove', className: 'btn-light', editor: editor },
                  
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel" style="color:green"></i> ',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-success btn-sm'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf" style="color:red"></i> ',
                        titleAttr: 'Exportar a PDF',
                        className: 'btn btn-danger'
                    }, {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> ',
                        titleAttr: 'Imprimir',
                        className: 'btn btn-info'
                    },

                    {
                        text: '<i class="fas fa-check-square"></i>',
                        extend: 'selectAll',
                        className: 'btn-space'
                    },
                    {
                        text: '<i class="far fa-check-square"></i>',
                        extend: 'selectNone',
                        className: 'btn-space'
                    },
                   
                    {
                        extend: "selected",
                        text: '<i class="fas fa-clone"></i>',
                        titleAttr: 'Duplicar',
                        action: function (e, dt, node, config) {
                            // Start in edit mode, and then change to create
                            editor
                                .edit(table.rows({ selected: true }).indexes(), {
                                    title: 'Duplicar seleccionado',
                                    buttons: 'Duplicar'
                                })
                                .mode('create');
                        }
                    },
                ],
                language: {
                   url: "@Url.Content("~/Content/idioma/datatable.es-ES.json")"
                }
            });
        });


    </script>
    }
